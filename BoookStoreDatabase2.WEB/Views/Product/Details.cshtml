@using BoookStoreDatabase2.BLL.Models.DTO
@model ProductsDTO

@{
    ViewBag.Title = "Product Details";
    var photoPath = "~/images/" + (Model.ImagePath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />
                <h4>ID : @Model.Id</h4>
                <h4>Price : @Model.Price</h4>
                <h4>Quantity : @Model.Quantity</h4>
                <h4>Type : @Model.ProductType.ToString()</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="product" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

